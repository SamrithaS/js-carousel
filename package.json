{
  "name": "vanilla-js-library-template",
  "version": "0.0.1",
  "description": "Template for production ready vanilla js library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timelessco/vanilla-js-library-template.git"
  },
  "bugs": {
    "url": "https://github.com/timelessco/vanilla-js-library-template/issues"
  },
  "author": "Timeless <hello@timeless.co> (https://timeless.co/)",
  "license": "MIT",
  "private": true,
  "main": "./lib/vanilla-js-library-template.umd.js",
  "module": "./lib/vanilla-js-library-template.es.js",
  "exports": {
    ".": {
      "import": "./lib/vanilla-js-library-template.es.js",
      "require": "./lib/vanilla-js-library-template.umd.js"
    }
  },
  "browser": "./lib/vanilla-js-library-template.umd.js",
  "unpkg": "./lib/vanilla-js-library-template.umd.js",
  "files": [
    "lib"
  ],
  "keywords": [
    "js",
    "library",
    "production",
    "template",
    "vanilla"
  ],
  "scripts": {
    "build": "vite build",
    "build:lib": "vite build --config vite-lib.config.js",
    "dev": "vite --host",
    "format": "prettier -l --cache \"./**/*.{html,css,js,jsx,ts,tsx,md,json}\"",
    "format:fix": "prettier --write --cache --check \"./**/*.{html,css,js,jsx,ts,tsx,md,json}\"",
    "lint": "eslint --cache --color --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint --cache --color --ext .js,.jsx,.ts,.tsx . --fix",
    "lint:styles": "stylelint '**/*.css' --cache --color --ignore-path .prettierignore -f verbose",
    "lint:styles:fix": "stylelint '**/*.css' --fix --cache --color --ignore-path .prettierignore -f verbose",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "prettier": "2.8.0",
    "prettier-plugin-organize-imports": "^3.2.1",
    "prettier-plugin-pkg": "^0.17.1",
    "stylelint": "14.15.0",
    "stylelint-config-standard": "29.0.0",
    "vite": "^3.2.4"
  }
}
